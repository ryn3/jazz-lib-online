      $(".choose").click(function () {
          var selection = this.text
          selection = selection.substring(0, selection.length-2)
          console.log(selection)
          $(".input").val($(".input").val() + selection + "; ")
          
          //alert("Handler for .click() called.");
      });

      $(".choosealbum").click(function () {
          $(".input").val('')
          var selection = this.nextElementSibling.text
          selection = selection
          console.log(selection)
          $(".input").val($(".input").val() + selection)
          //alert("Handler for .click() called.");
      });

      $("#clear-me").click(function(){
          $(".input").val("")

      })
      $('.tag').each(function(){
          thisText = this.nextElementSibling.text
          $(this).qtip({  
              content: thisText
          })
      });

      $('.all-persons').click(function(){
          //console.log(this)
          currentNode = this.nextElementSibling
          //console.log(currentNode)
          var names = []
          while(currentNode !== null &&currentNode.localName != "p"){
                //console.log(currentNode)
                var name = currentNode.text
                name = name.substring(0,name.length-2)
                //console.log(name)
                names.push(name)
                currentNode = currentNode.nextElementSibling.nextElementSibling.nextElementSibling


          }
          names.forEach(function(name){
             $(".input").val($(".input").val() + name + "; ")
          })
      })


      $('.all-years').click(function(){
          //console.log(this)
          currentNode = this.nextElementSibling.childNodes
          var names = []
          //console.log(currentNode.length)
          for (var i = 0; i < currentNode.length; i+=2) {
            var child = currentNode[i]
            var name = child.text
            name = name.substring(0,name.length-2)
            names.push(name)
          }


          names.forEach(function(name){
             $(".input").val($(".input").val() + name + "; ")
          })
      })




