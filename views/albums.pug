  hr
  p.lead 
  .row
    .col-md-12
      h4 Select one album  

      form( target="_blank" ,method="POST", action="/info")
        input(hidden class="input" type="text" name="album" size="120")
        input(hidden type="text" name="years" value=yearsQuery)
        input(hidden type="text" name="countries" value=countriesQuery)
        input(hidden type="text" name="labels" value=labelsQuery)
        input(hidden type="text" name="artists" value=artistsQuery)
        each index, val in albumsObj
            p
            button(class="choosealbum" style="cursor: pointer" )= val
            a(hidden name="id")= hidden[val]
            a(style="color: #777777")= " "+index 
        